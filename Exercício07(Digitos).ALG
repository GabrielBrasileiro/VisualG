Algoritmo "Digitos"

Var

   // Seção de Declarações das variáveis
   nome: caracter
   digitos: inteiro

Inicio

   // Seção de Comandos, procedimento, funções, operadores, etc...

   escreval("Digite o seu nome: ")
   leia(nome)

   digitos <- Compr(nome)
   escreval("O nome ",nome," tem ", digitos, "letras")

Fimalgoritmo